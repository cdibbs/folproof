{
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "classic",
        "target": "ES5",
        "preserveConstEnums": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "outFile": "./build/src/verifier.js",
        "verbose": true
    },
    "filesGlob": [
        "src/**/*.ts"
    ],
    "atom": {
        "rewriteTsconfig": false
    },
    "files": [
        "src/FOLRulebookFactory.ts",
        "src/IRulebookFactory.ts",
        "src/Justifier.ts",
        "src/Proof.ts",
        "src/ReasonFormat.ts",
        "src/Rule.ts",
        "src/Statement.ts",
        "src/Utilities.ts",
        "src/VerificationResult.ts",
        "src/Verifier.ts",
        "src/parser/Parser.d.ts"
    ]
}
